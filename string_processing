#include<stdio.h>
int main()
{
	char words[15];
	int vowels=0;
	printf("The program calculates the number of vowels.\n");
	printf("Enter a word:");
	scanf("%s",&words);
	int i=0;
	
	while(words[i] != '\0'){
		  if(words[i] =='a'||words[i] =='e'||words[i] =='i'||words[i] =='o'||words[i] =='u'){
			  vowels++;
			   
		  }
		 	i = i + 1;
		  }
	printf("The word contains %d vowels.\n",vowels);
}
		